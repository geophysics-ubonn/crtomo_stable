        integer         * 4     nrel((elmax+relmax),selmax)

c Anzahl der Elemente (ohne Randelemente)
        integer         * 4     elanz

c Anzahl der Randelemente
        integer         * 4     relanz

c Zeiger auf Werte der Randelemente
        integer         * 4     rnr(relmax)
c Zeiger auf die Nachbarn 	
	integer         * 4     nachbar(elmax,0:selmax)

