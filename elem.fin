        integer         * 4     typ(typmax)

c Anzahl der Elemente eines bestimmten Typs
        integer         * 4     nelanz(typmax)

c Anzahl der Knoten (bzw. Knotenvariablen) in einem Elementtyp
        integer         * 4     selanz(typmax)

c Zeiger auf Koordinaten der Knoten
