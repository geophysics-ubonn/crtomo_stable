c COMMON

c Anzahl der Knoten (bzw. Knotenvariablen)
        integer         * 4     sanz
cchris>        
c Maximaler Grad der Knotenpunkte
        integer         * 4     , save :: grmax
cchris<
c Anzahl der Elementtypen
        integer         * 4     typanz

c Bandbreite der Gesamtsteifigkeitsmatrix 'a'
        integer         * 4     mb

c Elementtypen
